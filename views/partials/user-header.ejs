<div class="container">
  <div class="ms-auto text-end py-1">
    <% if (locals.user != null && user?.username) { %>
      Logged in as: <%= user.username %>
      <div class="my-1">
        <form id="logoutForm" action="/logout" method="POST">
          <button class="btn btn-sm btn-danger btn-block" type="submit">Log out</button>
        </form>
      </div>
    <% } else { %>
      Not logged in
      <div class="my-1">
        <a href="/login"><button class="btn btn-sm btn-success btn-block">Log in</button></a>
      </div>
    <% } %>
  </div>
</div>
